  {
    "name": "JukedGG Live Update ",
    "version": "1.0",
    "description": "Get updated when your favorite broadcast are live!",
    "permissions": ["notifications", "tabs", "activeTab", "webNavigation", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "browser_action.html",
      "default_icon": {
        "16": "images/jukedgg_icon.png"
      }
    },
    "options_page": "options.html",
    "icons": {
      "16": "images/jukedgg_icon.png"
    },
    "manifest_version": 2
  }
